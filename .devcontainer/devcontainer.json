{
  "name": "WealthFlow Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "postCreateCommand": "npm install",
  "forwardPorts": [5173],
  "portsAttributes": {
	"5173": { "label": "Vite Dev Server", "onAutoForward": "notify" }
  },
  "customizations": {
	"vscode": {
  	"extensions": ["esbenp.prettier-vscode"],
  	"settings": { "editor.formatOnSave": true }
	}
  }
}
